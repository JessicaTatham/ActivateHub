<h1><%= @type.name %></h1>
<p>
    <b> Upcoming Events:</b>
    <%= render :partial => 'events/list', :locals => { :events =>  @type.events.future.sort_by(&:start_time) } %>
</p>
<p>
    <b> Past Events:</b>
    <% if @type.events.past.empty? %>
    <ul class="event_list">
      <li>
        <i> No past events</i>
      </li>
    <% else %>
      <%= render :partial => 'events/list', :locals => { :events => @type.events.past.reorder('start_time desc') } %>
    <% end %>

</p>
