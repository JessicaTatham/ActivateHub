#navbar-logo
  = link_to t('.logo_link', :default => '/') do
    - if logo_src = t('.logo_src', :default => '').presence
      = image_tag logo_src, :title => @current_site.name
    - else
      = @current_site.name

#navbar-toggle
  %a
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar

#navbar-menu
  %ul
    %li{:class => link_class[:events]}= link_to t('.menu.events'), events_path
    %li{:class => link_class[:organizations]}= link_to t('.menu.organizations'), organizations_path
    %li{:class => link_class[:venues]}= link_to t('.menu.venues'), venues_path

#navbar-search
  = form_tag search_events_path, :method => :get do
    = text_field_tag 'query', @query, :placeholder => t('.search.placeholder')

#navbar-subnav
  = render 'events/subnav' if link_class[:events] == 'active'
  = render 'organizations/subnav' if link_class[:organizations] == 'active'
  = render 'venues/subnav' if link_class[:venues] == 'active'

  - if learn_more = t('.learn_more', :default => '').presence
    .learn-more= t('.learn_more').html_safe
